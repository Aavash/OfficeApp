<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dp" android:color="#A81A0A" />

            <gradient android:angle="-90" android:endColor="#A85C11" android:startColor="#A81A0A" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dp" android:color="#A81A0A" />

            <solid android:color="#A81A0A" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dp" android:color="#A81A0A" />

            <gradient android:angle="-90" android:endColor="#A81A0A" android:startColor="#A85C11" />
        </shape>
    </item>

</selector>